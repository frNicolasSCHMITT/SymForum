<section class="article-section">

    <table class="table article-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>PublicationDate</th>
                <th>LastUpdateDate</th>
                <th>IsPublished</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.publicationDate ? article.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.lastUpdateDate ? article.lastUpdateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no article yet !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a class="btn btn-success" href="{{ path('article_new') }}">Create new</a> #}
</section>
